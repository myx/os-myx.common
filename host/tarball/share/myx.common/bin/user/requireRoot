#!/bin/sh

##### !!! This script is universal for FreeBSD, Darwin, Ubuntu. !!! #####

UserRequireRoot(){
	test `id -u` = 0 || { echo "â›” ERROR: ${1:-UserRequireRoot}: Must be run under 'root' user!" >&2 ; exit 1; }
}

case "$0" in
	*/myx.common/bin/user/requireRoot) 
		if [ -z "$1" ] ; then
			echo "Syntax: myx.common user/requireRoot [command_name]" >&2
			exit 1
		fi
		set -e
		UserRequireRoot "$@"
	;;
esac

#!/bin/sh

test `id -u` = 0 || { echo 'â›” ERROR: Must be root!' >&2 ; exit 1 ; }


case "$0" in
	*/bin/remove/myx.common-uninstall.Common) 
		if [ -z "$1" ] || [ "--yes" != "$1" ] ; then
			echo "Syntax: myx.common remove/myx.common-uninstall --yes" >&2

#!/usr/bin/env bash

# This script is universal for FreeBSD, Darwin, Ubuntu.

Help(){
	local MYXROOT="${MYXROOT:-/usr/local/share/myx.common}"
	local FINDREZ="$( find "$MYXROOT/bin" -type f | sed "s:^$MYXROOT/bin/::g" | sort )"

	if [ "$1" = "--bare" ] ; then
		echo "$FINDREZ"
		return 0 
	fi

	echo "'myx.common' script commands:" >&2
	for ITEM in $FINDREZ ; do
		echo "  $ITEM" >&2
	done
}

case "$0" in
	*/myx.common/bin/help) 
		set -e
		Help "$@"
	;;
esac

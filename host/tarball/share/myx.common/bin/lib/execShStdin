#!/bin/sh

##### !!! This script is universal for FreeBSD, Darwin, Ubuntu. !!! #####

ExecShStdin(){
	sh -c 'eval "`cat`"'
}

case "$0" in
	*/myx.common/bin/lib/execShStdin) 
		if [ "--help" = "$1" ] ; then
			echo "Syntax: myx.common lib/execShStdin [--bash] [<arguments...>]" >&2
			exit 1
		fi
		set -e

		if [ "--bash" = "$1" ] ; then
			shift
			if [ ! -n "$BASH_VERSION" ] ; then
				bash -c 'eval "`cat`"'
				exit 0
			fi
		fi

		eval "`cat`" "$@"
	;;
esac

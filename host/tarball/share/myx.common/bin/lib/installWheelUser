#!/bin/sh

##### !!! This script is universal for FreeBSD, Darwin, Ubuntu. !!! #####
#####                          (it depends on OS-dependent include) #####

set -e

type UserRequireRoot >/dev/null 2>&1 || \
	. "${MYXROOT:-/usr/local/share/myx.common}/bin/user/requireRoot"

type OsGetWheelGroupNames >/dev/null 2>&1 || \
	. "${MYXROOT:-/usr/local/share/myx.common}/bin/os/getWheelGroupNames"

type InstallUser >/dev/null 2>&1 || \
	. "${MYXROOT:-/usr/local/share/myx.common}/bin/lib/installUser"

type InstallUserGroupMembership >/dev/null 2>&1 || \
	. "${MYXROOT:-/usr/local/share/myx.common}/bin/lib/installUserGroupMembership"

InstallWheelUser(){
	UserRequireRoot "InstallWheelUser"

	local NAME="$1" TITLE="$2"

	[ -z "$NAME" ] && echo "â›” ERROR: InstallWheelUser: username is required!" >&2 && exit 1
	[ -z "$TITLE" ] && echo "ðŸ™‹ WARNING: InstallWheelUser: usertitle is taken from name ($NAME)!" >&2 && TITLE="$NAME"
	
	InstallUser "$NAME" "$TITLE"
	InstallUserGroupMembership "$NAME" "`OsGetWheelGroupNames`"
}

case "$0" in
	*/myx.common/bin/lib/installWheelUser) 
		InstallWheelUser "$@"
	;;
esac
